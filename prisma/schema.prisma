generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Course {
  id    Int @id @default(autoincrement())

  students Student[]
}

// mb add couse???????? real debatable
model Group {
  id       Int       @id @default(autoincrement())
  code String @unique

  createdAt  DateTime @default(now())
  updateadAt DateTime @updatedAt

  Department     Department? @relation(fields: [DepartmentCode], references: [code])
  DepartmentCode String?

  students Student[]
}

model Department {
  id       Int       @id @default(autoincrement())
  code String @unique
  name String @unique

  groups Group[]
}

// mb delete couse???
model Student {
  id Int @id @default(autoincrement())

  User   User? @relation(fields: [UserId], references: [id])
  UserId Int?

  Course    Course? @relation(fields: [CourseId], references: [id])
  CourseId  Int?
  Group     Group?  @relation(fields: [GroupCode], references: [code])
  GroupCode String?
}

model Supervisor {
  id     Int   @id @default(autoincrement())
  User   User? @relation(fields: [UserId], references: [id])
  UserId Int?

  events Event[]
}

model User {
  id Int @id @default(autoincrement())

  first_name    String
  last_name     String
  sure_name     String
  date_of_birth DateTime

  role Role @default(STUDENT)
  sex  Sex  @default(MALE)

  email    String
  password String

  createdAt   DateTime     @default(now())
  updateadAt  DateTime     @updatedAt
  students    Student[]
  supervisors Supervisor[]
}

model Event {
  id           Int         @id @default(autoincrement())
  name         String
  date         DateTime
  createdAt    DateTime    @default(now())
  Supervisor   Supervisor? @relation(fields: [SupervisorId], references: [id])
  SupervisorId Int?
}

enum Role {
  STUDENT
  SUPERVISOR
}

enum Sex {
  MALE
  FEMALE
}
